{
  "name": "skipbo-server",
  "version": "1.0.0",
  "description": "Project to learn TypeScript and Websockets using Mattel's popular card game as a learning medium.  Skip-Bo is a registered trademark of Mattel and a lot of fun to play.  To purchase, go to: https://www.mattelgames.com/en-us/cards/skip-bo",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "scripts": {
    "clearJestCache": "jest --clearCache",
    "lint": "eslint ./src/**/*.ts --fix",
    "prebuild": "npm run lint",
    "build": "tsc",
    "pretest:unit": "eslint ./src/**/*.ts --fix",
    "test:unit": "jest src/unit/**/*.test.ts --maxWorkers=1",
    "posttest:unit": "npm run commit",
    "test:int": "jest src/int/**/*.test.ts --maxWorkers=1",
    "serve:desktop": "nodemon ./src/main/serveDesktop.ts",
    "commit": "git add -A; timestamp=$(date \"+%c\") && git commit -m \"Test and Commit @ $timestamp\" && git push"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rkennel/skipbo/server"
  },
  "author": "Ryan Kennel",
  "license": "MIT",
  "dependencies": {
    "@types/ws": "^7.2.4",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "moment": "^2.24.0",
    "restify": "^8.5.1",
    "restify-cors-middleware": "^1.1.1",
    "skipbo-common": "file:../common",
    "statuses": "^1.5.0",
    "typescript": "^3.8.3",
    "ws": "^7.2.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.1",
    "@types/lodash": "^4.14.149",
    "@types/node": "^13.11.1",
    "@types/restify": "^8.4.2",
    "@types/restify-cors-middleware": "^1.0.1",
    "@types/statuses": "^1.5.0",
    "@types/supertest": "^2.0.8",
    "@types/websocket": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "atomic-sleep": "^1.0.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^25.3.0",
    "nodemon": "^2.0.3",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.3.1",
    "ts-node": "^8.8.2",
    "websocket": "^1.0.31"
  }
}
